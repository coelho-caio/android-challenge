<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/img_item_selected_item"
        android:layout_height="63dp"
        android:layout_width="68dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="27dp"
        android:layout_marginTop="34dp"
        android:background="@drawable/show_item"/>

    <TextView
        android:id="@+id/tv_season_name_item_seletected_item"
        style="@style/Temporada1"
        android:layout_width="128dp"
        android:layout_height="34dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="31dp"
        android:width="143dp"
        android:height="24dp"
        android:lineSpacingMultiplier="1.50"
        android:text="Temporada 1"
        app:layout_constraintStart_toEndOf="@+id/img_item_selected_item"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_sinopse_item_seletected_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:width="186dp"
        android:height="40dp"
        android:lineSpacingMultiplier="1.43"
        style="@style/PequenaSinopseDaT"
        app:layout_constraintStart_toStartOf="@+id/tv_season_name_item_seletected_item"
        app:layout_constraintTop_toBottomOf="@+id/tv_season_name_item_seletected_item" />

    <ImageView
        android:id="@+id/img_expandable_item_seleted_show"
        android:layout_width="24dp"
        android:layout_height="16dp"
        android:layout_marginStart="18.12dp"
        android:layout_marginBottom="28dp"
        tools:background="@drawable/ic_arrow_down"
        app:layout_constraintBottom_toBottomOf="@+id/tv_sinopse_item_seletected_item"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/tv_sinopse_item_seletected_item" />


</androidx.constraintlayout.widget.ConstraintLayout>